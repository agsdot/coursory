# ODM
gem 'mongo_mapper'
gem 'bson_ext'

gem 'sanitize'  # cleaning HTML

# production
gem 'unicorn'

group :development do
  gem 'thin'  # web server
  gem 'pry'  # debugging
  gem 'awesome_print'  # printing
end
